app:
  title: Scaffolded Backstage App
  baseUrl: http://localhost:3000

organization:
  name: Acme Corporation

backend:
  baseUrl: http://localhost:7000
  listen:
    port: 7000
  cors:
    origin: http://localhost:3000
    methods: [GET, POST, PUT, DELETE]
    credentials: true
  {{#if dbTypeSqlite}}
  database:
    client: sqlite3
    connection: ':memory:'
  {{/if}}
  {{#if dbTypePG}}
  database:
    client: pg
    connection:
      host:
        $secret:
          env: POSTGRES_HOST
      port:
        $secret:
          env: POSTGRES_PORT
      user:
        $secret:
          env: POSTGRES_USER
      password:
        $secret:
          env: POSTGRES_PASSWORD
  {{/if}}

proxy:
  '/test':
    target: 'https://example.com'
    changeOrigin: true

techdocs:
  storageUrl: http://localhost:7000/techdocs/static/docs

lighthouse:
  baseUrl: http://localhost:3003

auth:
  providers: {}

