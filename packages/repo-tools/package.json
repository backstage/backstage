    "@types/node": "^18.17.8",
    "@types/prettier": "^2.0.0"
  },
  "peerDependencies": {
    "@microsoft/api-extractor-model": "*",
    "@microsoft/tsdoc": "*",
    "@microsoft/tsdoc-config": "*",
    "@useoptic/optic": "^0.50.7",
    "prettier": "^2.8.1",
    "typescript": "> 3.0.0"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "files": [
    "bin",
    "dist/**/*.js",
    "templates",
    "openapitools.json"
  ],
  "nodemonConfig": {
    "watch": "./src",
    "exec": "bin/backstage-repo-tools",
    "ext": "ts"
  }
