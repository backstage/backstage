{
  "name": "@backstage/plugin-graphql-backend-module-catalog",
  "description": "An experimental module for the GraphQL backend that adds catalog schema",
  "version": "0.0.0",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public",
    "main": "dist/index.cjs.js",
    "types": "dist/index.d.ts"
  },
  "exports": {
    ".": "./src/index.ts",
    "./catalog.graphql": "./src/catalog/catalog.graphql",
    "./relation.graphql": "./src/relation/relation.graphql",
    "./package.json": "./package.json"
  },
  "backstage": {
    "role": "backend-plugin"
  },
  "homepage": "https://backstage.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/backstage/backstage",
    "directory": "plugins/graphql-catalog"
  },
  "keywords": [
    "backstage",
    "graphql"
  ],
  "scripts": {
